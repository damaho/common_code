	function __construct($id, $label, $onclick = '',$class='') {
		$this->fieldname = $id;
		$this->fieldlabel = $label;
		$this->onclick = $onclick;
		$this->extra_class = $class;
	}
	
	function getXHTML() {
		$xhtml = "";
		$onclick = "";
		if ($this->onclick != "")
			$onclick = "onclick='" . genericEscape($this->onclick) . "'";
		$xhtml .= "<div><input type='button' id='{$this->fieldname}' value='{$this->fieldlabel}' class='fieldbutton {$this->extra_class}' {$onclick} /></div>\n";
		return $xhtml;
	}
}

